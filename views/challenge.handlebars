<!doctype html>

<html>
<head>
	<title>Challenge</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/smallTalk.css" rel="stylesheet">


	<style>
		h1{
			font-size: 60px;
			color: blue;
		}
		h2{
			font-size:40px;
			color:blue;
		}
		.challengeBorder{
			background-color: #FFBE61;

		}
		.theChallenge{
			font-size: 25px;
			color: black;
		}


		.main{
			margin: 30px auto;
			text-align: center;
			vertical-align: center;
        }

	</style>
	<!-- this is a comment in HTML -->

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</head>

<body class="backgroundColor">
	<div class="container">
		<!-- h1 through h6 are headers. The higher the number, the smaller the header -->
		<!-- p means paragraph -->



        <div><a href="/index"><button class="homebtn">MAIN MENU</button></a></div>
		<div align="center">
			<h1 class="titlePage">Challenge </h1>
		</div>

        {{#if alt}}
              <hr style="height:4px;border:none;color:#333;background-color:#333;" />

            <div class="text-center">
              <h2 class="subHeader">Your Challenge of the Day</h2>
            </div>

            <table class="main" border="0" cellpadding="15" margin="10">
                <tr class="challengeBorder">
                    <td>

                        <div>
                              <p id="chal" class="theChallenge">{{challenge}}</p>
                         </div>
                    </td>
                </tr>
            </table>

        <div align="center">
        <button onClick="set()" class ="smallbtn">Get New Challenge</button>
        </div>


         {{else}}
            <hr style="height:4px;border:none;color:#333;background-color:#333;" />

            <div class="text-center">
                <h2 class="subHeader">Your Challenge of the Day</h2>
            </div>

            <table class="main" border="0" cellpadding="15" margin="10">
                <tr class="challengeBorder">
                    <td>
                        <a href="#"><p class="theChallenge">{{challenge}}</p></a>
                    </td>
                </tr>
            </table>

        {{/if}}
        <table class="main" border="0">
            <tr>
                <td>
									<form action="/complete" method="post" id="challengeDone">
										<input type="hidden" name="challenge" id="challengeInput" value="">
									</form>
                  <button type="submit" form="challengeDone" value="Completed" class="mediumbtn">Challenge Completed</button>
                </td>
            </tr>
        </table>


	</div>


	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="/js/randomChallenge.js"></script>
</body>
</html>
